<resources>

    <!-- ****************动画*****************-->
    <style name="Animation" />

    <style name="Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/right_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/left_out</item>
    </style>

    <style name="Animation.Activity.Bottom">
        <item name="android:activityOpenEnterAnimation">@anim/bottom_in</item>
        <item name="android:activityOpenExitAnimation">@anim/bottom_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/bottom_in</item>
        <item name="android:activityCloseExitAnimation">@anim/bottom_out</item>
    </style>

    <style name="Animation.Activity.Alpha">
        <item name="android:activityOpenEnterAnimation">@anim/alpha_in</item>
        <item name="android:activityOpenExitAnimation">@anim/alpha_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/alpha_in</item>
        <item name="android:activityCloseExitAnimation">@anim/alpha_out</item>
    </style>

    <style name="Animation.Windows" />

    <style name="Animation.Windows.Bottom">
        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>

    <style name="Animation.Windows.Alpha">
        <item name="android:windowEnterAnimation">@anim/alpha_in</item>
        <item name="android:windowExitAnimation">@anim/alpha_out</item>
    </style>

    <!-- ****************Dialog区域*****************-->
    <style name="BaseDialog">
        <item name="dialogMainLayout">@layout/dialog</item>
        <item name="dialogListLayout">@layout/dialog_select</item>
        <item name="dialogListItem">@layout/dialog_select_item</item>
        <item name="dialogSingleChoiceItem">@layout/dialog_select_singlechoice</item>
        <item name="dialogMultiChoiceItem">@layout/dialog_select_multichoice</item>
        <item name="fromBottom">false</item>
        <item name="widthProportion">0.8</item>
    </style>
    <!-- 从底部弹出的-->
    <style name="BaseDialog.Bottom" />

    <!-- 从底部弹出的 SelectPhoto-->
    <style name="BaseDialog.Bottom.SelectPhoto">
        <item name="dialogMainLayout">@layout/dialog_select_photo</item>
        <item name="dialogListLayout">@layout/dialog_select_photo_listview</item>
        <item name="dialogListItem">@layout/dialog_select_photo_item</item>
        <item name="fromBottom">true</item>
        <item name="widthProportion">1.0</item>
    </style>

    <style name="BaseDialogTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:minHeight">@dimen/dp_30</item>
        <item name="android:textSize">@dimen/G_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="BaseDialogTitle.SelectPhoto">
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/girdle_min_h</item>
        <item name="android:textSize">@dimen/I_title</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_grey_light_normal</item>
    </style>

    <style name="BaseDialogMessage">
        <item name="android:paddingLeft">@dimen/dp_20</item>
        <item name="android:paddingRight">@dimen/dp_20</item>
        <item name="android:paddingBottom">@dimen/dp_22</item>
        <item name="android:paddingTop">@dimen/dp_15</item>
        <item name="android:minHeight">@dimen/dp_80</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/H_title</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="BaseDialogButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:minHeight">@dimen/item_height</item>
        <item name="android:textSize">@dimen/H_title</item>
        <item name="android:textColor">@color/blue_400</item>
        <item name="leftBackground">@drawable/white_alpha_0_9_5_corner_bottom_left_16dp_bg</item>
        <item name="rightBackground">@drawable/white_alpha_0_9_5_corner_bottom_right_16dp_bg</item>
        <item name="wholeBackground">@drawable/white_alpha_0_9_5_corner_bottom_16dp_bg</item>
        <item name="lineColor">@color/green_400</item>
    </style>

    <style name="BaseDialogButton.SelectPhoto">
        <item name="leftBackground">@drawable/white_alpha_0_9_5_corner_16dp_bg</item>
        <item name="rightBackground">@drawable/white_alpha_0_9_5_corner_16dp_bg</item>
        <item name="wholeBackground">@drawable/white_alpha_0_9_5_corner_16dp_bg</item>
    </style>

    <style name="Line" />
    <!--横线-->
    <style name="Line.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line</item>
    </style>

    <!--横线有padding-->
    <style name="Line.Horizontal.Padding">
        <item name="android:background">@color/windows_background_light</item>
        <item name="android:src">@color/line</item>
        <item name="android:paddingLeft">@dimen/gap_grade_3</item>
        <item name="android:paddingRight">@dimen/gap_grade_3</item>
        <item name="android:contentDescription">@null</item>
    </style>
    <!--竖线-->
    <style name="Line.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line</item>
    </style>
    <!--竖线有padding-->
    <style name="Line.Vertical.Padding">
        <item name="android:background">@color/windows_background_light</item>
        <item name="android:src">@color/line</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:paddingTop">@dimen/gap_grade_3</item>
        <item name="android:paddingBottom">@dimen/gap_grade_3</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <!-- ToolBar 的样式 -->
    <style name="ToolBar" />

    <style name="ToolBar.Title">
        <item name="android:textSize">@dimen/top_bar_title_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ToolBar.SubTitle">
        <item name="android:textSize">@dimen/top_bar_sub_title_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- TopBar 默认样式统一样式 -->
    <style name="TopBar">
        <item name="textSize">@dimen/top_bar_title_text_size</item>
        <item name="textColor">@color/top_bar_text_color</item>
        <item name="subTextSize">@dimen/top_bar_sub_title_text_size</item>
        <item name="subTextColor">@color/top_bar_text_color</item>
        <item name="android:background">@color/color_primary</item>
        <item name="textStyle">NORMAL</item>
    </style>

    <!-- Button 默认样式统一样式 -->
    <style name="CommonButton" parent="@style/Widget.AppCompat.Button.Borderless" />

    <!-- TextView 默认样式统一样式 -->
    <style name="CommonTextView" parent="@android:style/Widget.DeviceDefault.TextView" />

    <!-- 图片选择器-->
    <style name="CommonTextView.PhotoSelector" />

    <style name="CommonTextView.PhotoSelector.TimeLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0</item>
        <item name="android:background">@color/grey_alpha_0_7</item>
        <item name="android:paddingTop">@dimen/gap_grade_0</item>
        <item name="android:paddingLeft">@dimen/gap_grade_3</item>
        <item name="android:paddingRight">@dimen/gap_grade_3</item>
        <item name="android:paddingBottom">@dimen/gap_grade_0</item>
        <item name="android:textColor">@color/text_white_normal</item>
        <item name="android:textSize">@dimen/I_title</item>
    </style>


    <!-- EditText 默认样式统一样式 -->
    <style name="CommonEditText" parent="Widget.AppCompat.EditText" />


    <style name="CommonPickerView" />

    <style name="CommonPickerView.DateTimePicker">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="StatusView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:alpha">0</item>
    </style>

    <style name="StatusView.Weight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:alpha">0</item>
    </style>

</resources>
