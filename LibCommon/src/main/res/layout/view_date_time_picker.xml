<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/corner_5dp_normal"
        android:orientation="horizontal">

        <com.ishow.common.widget.pickview.PickerView
            android:id="@+id/year"
            style="@style/PickerView.DateTimePicker"
            android:layout_weight="1.3"
            app:unit="@string/year"/>

        <com.ishow.common.widget.pickview.PickerView
            android:id="@+id/month"
            style="@style/PickerView.DateTimePicker"
            app:unit="@string/month"/>

        <com.ishow.common.widget.pickview.PickerView
            android:id="@+id/date"
            style="@style/PickerView.DateTimePicker"
            app:unit="@string/date"/>

        <com.ishow.common.widget.pickview.PickerView
            android:id="@+id/hour"
            style="@style/PickerView.DateTimePicker"
            app:unit="@string/hour"/>

        <com.ishow.common.widget.pickview.PickerView
            android:id="@+id/min"
            style="@style/PickerView.DateTimePicker"
            app:unit="@string/min"/>
    </LinearLayout>
</merge>