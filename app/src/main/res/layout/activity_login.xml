<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <!--如果有必要用来填充icon-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/logo"
        android:scaleType="center"
        android:src="@drawable/logo"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"/>


    <com.ishow.common.widget.edittext.EditTextPro
        android:id="@+id/account"
        style="@style/EditTextPro.Login"
        app:inputHint="@string/login_hint_account"
        app:leftImage="@drawable/ic_account"/>


    <com.ishow.common.widget.edittext.EditTextPro
        android:id="@+id/password"
        style="@style/EditTextPro.Login"
        android:inputType="textPassword"
        app:inputHint="@string/login_hint_passwrod"
        app:leftImage="@drawable/ic_password"/>

    <TextView
        android:id="@+id/forget_password"
        style="@style/AppTextView.Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/dp_20"
        android:text="@string/login_forget_password"/>

    <Button
        android:id="@+id/login"
        style="@style/AppButton.Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_grade_5"
        android:text="@string/login"/>

    <Button
        android:id="@+id/regist"
        style="@style/AppButton.Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_grade_5"
        android:background="@drawable/round_color_accent_stroke_bg"
        android:text="@string/register"
        android:textColor="@color/normal_coloraccent_pressed_coloraccentpressed"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>


</LinearLayout>