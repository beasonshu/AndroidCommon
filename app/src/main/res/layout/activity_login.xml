<com.ishow.common.widget.watermark.WaterMarkLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/logo"
        android:scaleType="center"
        android:src="@drawable/logo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5" />


    <com.ishow.common.widget.edittext.EditTextPro
        android:id="@+id/mEditAccountView"
        style="@style/EditTextPro.Login"
        app:inputHint="@string/login_hint_account"
        app:leftImage="@drawable/ic_account" />


    <com.ishow.common.widget.edittext.EditTextPro
        android:id="@+id/mEditPasswordView"
        style="@style/EditTextPro.Login"
        app:inputHint="@string/login_hint_passwrod"
        app:inputType="textPassword"
        app:leftImage="@drawable/ic_password" />


    <Button
        android:id="@+id/login"
        style="@style/AppButton.Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_grade_5"
        android:text="@string/login" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/register"
            style="@style/AppTextView.Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/dp_20"
            android:text="@string/register_account" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/forgotPassword"
            style="@style/AppTextView.Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dp_30"
            android:text="@string/login_forget_password" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />


</com.ishow.common.widget.watermark.WaterMarkLinearLayout>