<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/windows_background"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/modify_user_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:background="@color/color_accent">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/large_header"
            android:layout_height="@dimen/large_header"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:contentDescription="@string/des_image"/>

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right_white"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_12"
            android:contentDescription="@string/des_image"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/E_title"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/avatar"
            android:layout_toStartOf="@id/arrow"
            android:layout_marginStart="@dimen/dp_15"
            tools:text="鱼大人"/>

    </RelativeLayout>

</LinearLayout>