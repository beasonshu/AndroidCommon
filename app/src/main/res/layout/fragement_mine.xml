<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windows_background"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/modify_user_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:background="@color/color_accent">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/large_header"
            android:layout_height="@dimen/large_header"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:contentDescription="@string/des_image" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_12"
            android:contentDescription="@string/des_image"
            android:src="@drawable/ic_arrow_right_white" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_toStartOf="@id/arrow"
            android:layout_toEndOf="@+id/avatar"
            android:textColor="@android:color/white"
            android:textSize="@dimen/E_title"
            tools:text="鱼大人" />

    </RelativeLayout>

    <com.ishow.common.widget.textview.TextViewPro
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_grade_3"
        android:paddingStart="@dimen/gap_grade_3"
        android:paddingEnd="@dimen/gap_grade_0"
        app:leftImageVisibility="gone"
        app:leftText="@string/settings"
        app:topLineVisibility="visible" />
</LinearLayout>