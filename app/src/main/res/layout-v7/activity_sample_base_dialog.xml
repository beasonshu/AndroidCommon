<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <com.ishow.common.widget.TopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftImage="@drawable/ic_back_white"
        app:text="@string/sample_base_dialog" />


    <TextView
        android:layout_marginTop="@dimen/gap_grade_3"
        android:id="@+id/normal"
        android:text="Normal"
        style="@style/AppTextView.Sample"/>

    <TextView
        android:layout_marginTop="@dimen/gap_grade_3"
        android:id="@+id/noTitleDialog"
        android:text="没有Title的"
        style="@style/AppTextView.Sample"/>

    <TextView
        android:layout_marginTop="@dimen/gap_grade_3"
        android:id="@+id/bottomDialog"
        android:text="底部弹出"
        style="@style/AppTextView.Sample"/>

</LinearLayout>